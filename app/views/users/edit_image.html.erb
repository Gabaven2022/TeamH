<main>
<div class="form-wrapper">
  <%= form_with model: @user, url: add_image_user_path do |f| %>
    <label class="image-item">
          <img id="preview" class="image">
      <div class="select">
        <%= f.file_field :profile_image,id: "myImage", onchange: "setImage(this);", onclick: "this.value = '';",class: "input, hide-input" %>
      </div>
    </label>
      <p class="image-note">アイコンを追加してください</p>
    <div class="cp_iptxt">
      <label class="ef">
        <%= f.text_field :faculty, class: "input input-faculity-field" , placeholder: "学部を入力してください。" %>
      </label>
    </div>
    <div class="button-panel">
      <%= f.submit "確定", class: "button" %>
    </div>
  <% end %>
  </div>
</main>
  <script>
    function setImage(target) {
        var reader = new FileReader();
        reader.onload = function (e) {
            document.getElementById("preview").setAttribute('src', e.target.result);
        }
        reader.readAsDataURL(target.files[0]);
    };

</script>
